.container
  %h2 New Board
  = form_with(model: @board, local: true) do |f|
    .field
      %div
        = f.label :name, 'Name'
      %div
        = f.text_field :name
    .field
      %div
        = f.label :overview, 'Description'
      %div
        = f.text_field :overview, class: 'large'
      = f.submit 'Submit', class: 'actions_btn'
